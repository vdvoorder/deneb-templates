{
    "data": {
      "values": [
        {"Category": "Targeted", "Actual Value": 500, "Target Value": 450},
        {"Category": "Bar", "Actual Value": 295, "Target Value": 300},
        {"Category": "Chart", "Actual Value": 205, "Target Value": 250}
      ]
    },
    "transform": [
      {
        "calculate": "if(datum['Actual Value'] >= datum['Target Value'], \"Over target\", \"Under target\")",
        "as": "ActualState"
      },
      {"calculate": "\"Target\"", "as": "TargetDummy"}
    ],
    "layer": [
      {
        "description": "Target Value bars",
        "mark": {"type": "bar"},
        "encoding": {
          "x": {"field": "Target Value"},
          "fill": {"field": "TargetDummy"}
        }
      },
      {
        "description": "Actual Value bars",
        "mark": {"type": "bar", "opacity": 0.5},
        "encoding": {
          "x": {"field": "Actual Value"},
          "fill": {
            "field": "ActualState",
            "scale": {"range": ["dodgerblue", "lightgray", "gold"]}
          }
        }
      }
    ],
    "encoding": {
      "x": {"type": "quantitative"},
      "y": {"field": "Category", "type": "nominal"}
    },
    "config": {}
  }